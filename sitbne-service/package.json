{
  "name": "sitbne",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.12.5",
    "@cap-js/change-tracking": "^1.0.5",
    "@cap-js/graphql": "^0.10.0",
    "@cap-js/telemetry": "^0.0.4",
    "@sap/cds": "^7",
    "@sap/xb-msg-amqp-v100": "^0.9.58",
    "@sap/xssec": "^3",
    "express": "^4",
    "passport": "^0.7.0",
    "redis": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1.5.1"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "requires": {
      "destinations": true,
      "db": {
        "kind": "sql",
        "credentials": {
          "url": "db.sqlite"
        },
        "schema_evolution": "auto"
      },
      "[production]": {
        "auth": "xsuaa",
        "messaging": {
          "kind": "redis-messaging"
        }
      },
      "messaging": {
        "kind": "file-based-messaging",
        "file": "../msg-box"
      },
      "[development]": {
        "auth": {
          "kind": "mocked",
          "users": {
            "admin": {
              "password": "admin",
              "roles": [
                "admin"
              ]
            },
            "moderator": {
              "password": "moderator",
              "roles": [
                "user", "moderator"
              ]
            },
            "user": {
              "password": "user",
              "roles": [
                "user"
              ]
            }
          }
        },
        "messaging": {
          "kind": "redis-messaging",
          "format": "cloudevents"
        }
      }
    }
  }
}
