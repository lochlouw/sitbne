{
  "name": "sitbne",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.12.5",
    "@cap-js/change-tracking": "^1.0.5",
    "@cap-js/graphql": "^0.10.0",
    "@cap-js/telemetry": "^0.0.4",
    "@grpc/grpc-js": "^1.10.1",
    "@opentelemetry/exporter-metrics-otlp-grpc": "^0.49.1",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.49.1",
    "@sap/cds": "^7",
    "@sap/xb-msg-amqp-v100": "^0.9.58",
    "@sap/xssec": "^3",
    "express": "^4",
    "passport": "^0.7.0",
    "redis": "^4",
    "sqlite": "^5.1.1",
    "@cap-js/sqlite": "^1.5.1"
  },
  "devDependencies": {
    "@sap/cds-dk": "^7",
    "cds-launchpad-plugin": "^2.1.8",
    "cds-swagger-ui-express": "^0.8.0",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "start": "cds-serve",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "build:cf": "mbt build",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "deploy:cf": "cf deploy mta_archives/sitbne_1.0.0.mtar --retries 0"
  },
  "cds": {
    "requires": {
      "destinations": true,
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url":":memory:"
        }
      },
      "[production]": {
        "auth": "xsuaa",
        "messaging": {
          "kind": "redis-messaging"
        }
      },
      "[hybrid]": {
        "auth": "xsuaa",
        "messaging": {
          "kind": "redis-messaging"
        }
      },
      "[development]": {
        "auth": {
          "kind": "mocked",
          "users": {
            "admin": {
              "password": "admin",
              "roles": [
                "admin"
              ]
            },
            "moderator": {
              "password": "moderator",
              "roles": [
                "user",
                "moderator"
              ]
            },
            "user": {
              "password": "user",
              "roles": [
                "user"
              ]
            }
          }
        },
        
        "messaging": {
          "kind": "redis-messaging",
          "format": "cloudevents"
        }
      },
      "messaging": {
        "kind": "file-based-messaging",
        "file": "../msg-box"
      }
     
    }
  }
}
