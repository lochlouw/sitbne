{
  "name": "sitbne-listener",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^3.12.0",
    "@sap-cloud-sdk/resilience": "^3.12.0",
    "@sap/cds": "^7",
    "@sap/xsenv": "^4.2.0",
    "@sap/xssec": "^3",
    "express": "^4",
    "passport": "^0.7.0",
    "redis": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^7"
  },
  "scripts": {
    "start": "cds-serve",
    "start:sqlite": "cds watch --profile sqlite",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "build:cf": "mbt build",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "deploy:cf": "cf deploy mta_archives/sitbne-listener_1.0.0.mtar --retries 0"
  },
  "cds": {
    "requires": {
      "[production]": {
        "auth": "xsuaa",
        "messaging": {
          "kind": "redis-messaging"
        }
      },
      "[hybrid]": {
        "auth": "xsuaa",
        "messaging": {
          "kind": "redis-messaging"
        }
      },
      "messaging": {
        "kind": "file-based-messaging",
        "file": "../msg-box"
      },
      "[development]": {
        "messaging": {
          "kind": "redis-messaging",
          "format": "cloudevents"
        }
      }
    }
  }
}
